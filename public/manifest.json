{
  "manifest_version": 3,
  "name": "招聘数据采集器",
  "description": "一个帮助用户快速筛选职位的Chrome浏览器插件",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "招聘数据采集器"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    
    "storage", 
    "alarms",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5173/*",
    "https://www.zhipin.com/*",
    "https://*.zhipin.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.zhipin.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}


